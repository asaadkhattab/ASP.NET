@model PatientPortal.Models.PhysicianViewModel
@{
    var isEditMode = Model.PhysicianId != null;
    ViewBag.Title = isEditMode ? "Edit " + Model.FullName : "Add Physician";
}

<h2>Add Physician</h2>

<div class="row">
    <div class="col-sm-6 col-xs-10">
        @using (Html.BeginForm(isEditMode ? "EditPhysician" : "AddPhysician", "Physician"))
    {
        @Html.HiddenFor(m => m.PhysicianId)
        <div class="form-group">
            @Html.LabelFor(m => m.LastName)
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.FirstName)
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-primary">@(isEditMode ? "Save" : "Add")</button>
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
}
    </div>
</div>