@model Portal.Models.PatientViewModel
@{
    var isEditMode = Model.PatientId != null;
    ViewBag.Title = isEditMode ? "Edit " + Model.FirstName : "Add Patient";
}

<h2>@Model.FirstName</h2>

<div class="row">
    <div class="col-sm-6 col-xs-10">
        @using (Html.BeginForm(isEditMode ? "EditPatient" : "AddPatient", "Patient"))
        {
            @Html.HiddenFor(m => m.PatientId)
            <div class="form-group">
                @Html.LabelFor(m => m.FirstName)
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="Medication_MedicationId">Medication</label>
                @Html.DropDownListFor(m => m.Medication.MedicationId, ViewBag.Medications as IEnumerable<SelectListItem>, new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-primary">@(isEditMode ? "Save" : "Add")</button>
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
        }
    </div>
</div>